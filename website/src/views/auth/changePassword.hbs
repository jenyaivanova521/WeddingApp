<div class="modal">
    <div class="modal-dialog modal-wa" role="document">
        <div class="modal-content">
            <div class="modal-wa-form">
                <h2>Change your password</h2>

                {{> components/flash/index center=true}}
                <form method="post" data-parsley-validate data-parsley-error-class="is-invalid" data-parsley-success-class="is-valid">
                    <div class="form-group">
                        <input class="form-control form-control-lg" name="password" placeholder="Current password" type="password" minlength="8" required>
                        <small class="form-text text-muted">If you do not have a password, because you logged in using a social network, use the <a href="/remind">password reset</a> option to get one</small>
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" name="password_new" placeholder="New password" type="password" minlength="8" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" name="password_new_repeat" placeholder="Repeat new password" type="password" minlength="8" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-custom" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>